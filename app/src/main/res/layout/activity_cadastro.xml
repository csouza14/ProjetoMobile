<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="45dp"
    tools:context="projetomobile.projetomobile.Activity.CadastroActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtCadNome"
        android:layout_width="380dp"
        android:layout_marginLeft="15dp"
        android:layout_height="40dp"
        android:hint="Nome"
        android:inputType="textCapCharacters"
        android:textColorHint="@android:color/darker_gray"
        android:background="#11000000"
        android:layout_marginTop="18dp"
        />

    <EditText
        android:id="@+id/edtCadSobrenome"
        android:layout_width="380dp"
        android:layout_marginLeft="15dp"
        android:hint="Sobrenome"
        android:inputType="textCapCharacters"
        android:layout_height="40dp"
        android:textColorHint="@android:color/darker_gray"
        android:background="#11000000"
        android:layout_marginTop="18dp"/>

    <EditText
        android:id="@+id/edtCadAniversario"
        android:layout_width="380dp"
        android:layout_marginLeft="15dp"
        android:layout_height="40dp"
        android:hint="Data de Aniversario"
        android:inputType="date"
        android:textColorHint="@android:color/darker_gray"
        android:background="#11000000"
        android:layout_marginTop="18dp"
        />

    <EditText
        android:id="@+id/edtCadEmail"
        android:layout_width="380dp"
        android:layout_marginLeft="15dp"
        android:layout_height="40dp"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColorHint="@android:color/darker_gray"
        android:background="#11000000"
        android:layout_marginTop="18dp"/>

    <EditText
        android:id="@+id/edtCadSenha"
        android:layout_width="380dp"
        android:layout_marginLeft="15dp"
        android:layout_height="40dp"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColorHint="@android:color/darker_gray"
        android:background="#11000000"
        android:layout_marginTop="18dp" />

    <EditText
        android:id="@+id/edtCadConfirmarSenha"
        android:layout_width="380dp"
        android:layout_marginLeft="15dp"
        android:layout_height="40dp"
        android:hint="Confirma senha"
        android:inputType="textPassword"
        android:textColorHint="@android:color/darker_gray"
        android:background="#11000000"
        android:layout_marginTop="18dp"
        />

    <RadioGroup
        android:id="@+id/rgSexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbfem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Feminino"
            android:textSize="50px"
            android:layout_marginTop="10dp"
            />

        <RadioButton
            android:id="@+id/rbmas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Masculino"
            android:textSize="50px"
            android:layout_marginTop="10dp"/>
    </RadioGroup>

    <Button
        android:textColor="#FFF"
        android:id="@+id/btnGravar"
        android:layout_width="250dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:layout_marginLeft="80dp"
        android:textStyle="bold"
        android:background="@drawable/buttonstyle"
        android:layout_marginTop="20dp"/>

</LinearLayout>


